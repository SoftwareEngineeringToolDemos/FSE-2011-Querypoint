<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="salmir.qp.plugin.category.command"
            id="salmir.qp.plugin.commands.lastchange"
            name="Last Change">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="salmir.qp.plugin.JavaVariableActions"
            objectClass="org.eclipse.jdt.debug.core.IJavaVariable">
         <action
               class="salmir.qp.plugin.actions.LastchangeAction"
               definitionId="salmir.qp.plugin.commands.lastchange"
               id="salmir.qp.plugin.actions.LastchangeAction"
               label="lastchange"
               menubarPath="additions"
               tooltip="locates the last change of this variable/property by re-execution">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="qp_eclipse.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Sample Menu"
               mnemonic="M"
               id="qp_eclipse.menus.sampleMenu">
            <command
                  commandId="qp_eclipse.commands.sampleCommand"
                  mnemonic="S"
                  id="qp_eclipse.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="qp_eclipse.toolbars.sampleToolbar">
            <command
                  commandId="qp_eclipse.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="qp_eclipse.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
  
   <extension point="org.eclipse.ui.actionSets">
      <actionSet
            id="salmir.qp.plugin.actionSet"
            label="qp actions"
            visible="true">
         <action
               class="salmir.qp.plugin.actions.QPDebugToolbarActions"
               disabledIcon="icons/launch.png"
               icon="icons/launch.png"
               id="salmir.qp.plugin.debug"
               label="Querypoint"
               style="pulldown"
               toolbarPath="org.eclipse.debug.ui.launchActionSet/debug"
               tooltip="Querypoint">
         </action>
         <action
               class="salmir.qp.plugin.actions.LastchangeAction"
               definitionId="salmir.qp.plugin.commands.lastchange"     
               id="salmir.qp.plugin.actions.LastchangeAction"
               label="lastchange"
               menubarPath="org.eclipse.ui.run/jdtGroup"
               style="push">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchModes">
      <launchMode
            label="Querypoint"
            mode="qp">
      </launchMode>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchGroups">
      <launchGroup
            bannerImage="icons/launch.png"
            id="salmir.qp.plugin.launchGroup"
            image="icons/launch.png"
            label="Querypoint"
            mode="qp"
            title="Querypoint Launch Group">
      </launchGroup>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchDelegates">
      <launchDelegate
            delegate="salmir.qp.plugin.launch.QPLaunchDelegate_JDT_JavaLocal"
            id="salmir.qp.plugin.launchDelegate.JDT_JavaLocal"
            modes="qp"
            type="org.eclipse.jdt.launching.localJavaApplication">
      </launchDelegate>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="org.eclipse.jdt.internal.debug.ui.launcher.LocalJavaApplicationTabGroup"
            id="salmir.qp.plugin.launchConfigurationTabGroup.JDT_JavaLocal"
            type="org.eclipse.jdt.launching.localJavaApplication">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.jdt.debug.breakpointListeners">
      <breakpointListener
            class="salmir.qp.plugin.breakpoints.MyResumeBreakpointListener"
            id="qp-eclipse.breakpointListener1">
      </breakpointListener>
   </extension>

</plugin>
